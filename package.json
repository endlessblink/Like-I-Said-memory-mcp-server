{
  "name": "@endlessblink/like-i-said-mcp",
  "version": "3.0.0",
  "description": "AI-Powered Task Management & Memory for Claude - Intelligent fuzzy search, automatic work detection, and smart task tracking with 33+ tools. Features typo-tolerant search, universal work pattern recognition, and cross-session continuity.",
  "main": "server.js",
  "type": "module",
  "keywords": [
    "mcp",
    "memory",
    "ai",
    "claude",
    "cursor",
    "windsurf",
    "assistant",
    "context",
    "github",
    "dashboard",
    "react",
    "integration"
  ],
  "author": "endlessblink",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endlessblink/Like-I-Said-memory-mcp-server.git"
  },
  "homepage": "https://github.com/endlessblink/Like-I-Said-memory-mcp-server",
  "bugs": {
    "url": "https://github.com/endlessblink/Like-I-Said-memory-mcp-server/issues"
  },
  "bin": {
    "like-i-said-mcp": "cli.js"
  },
  "files": [
    "cli.js",
    "server.js",
    "server-markdown.js",
    "dashboard-server-bridge.js",
    "mcp-server-wrapper.js",
    "start-unified-dashboard.js",
    "start-dashboard.bat",
    "lib",
    "dist",
    "src",
    "public",
    "scripts",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "start": "node server-unified.js",
    "start:mcp": "MCP_MODE=full node server-unified.js",
    "start:legacy": "echo 'Legacy servers removed. Use: npm start'",
    "start:dashboard": "MCP_TRANSPORT=http MCP_MODE=full node server-unified.js",
    "dev": "cross-env CHOKIDAR_USEPOLLING=true vite --host 0.0.0.0",
    "dev:full": "MCP_TRANSPORT=http MCP_MODE=full node server-unified.js",
    "dashboard": "MCP_TRANSPORT=http MCP_MODE=full node server-unified.js",
    "dashboard:unified": "MCP_TRANSPORT=http MCP_MODE=full node server-unified.js",
    "tasks:watch": "node watch-tasks.js",
    "tasks:watch:active": "node watch-tasks.js --filter=active",
    "tasks:watch:todo": "node watch-tasks.js --filter=todo",
    "tasks:watch:compact": "node watch-tasks.js --compact",
    "build": "vite build",
    "preview": "vite preview",
    "migrate": "echo 'Migration script not implemented yet'",
    "migrate:neo4j": "echo 'Neo4j migration not implemented yet'",
    "check:refs": "node scripts/core/check-file-references.js",
    "check:move": "bash scripts/maintenance/pre-move-checklist.sh",
    "neo4j:start": "docker-compose -f docker-compose.neo4j.yml up -d",
    "neo4j:stop": "docker-compose -f docker-compose.neo4j.yml down",
    "neo4j:test": "echo 'Neo4j test script not implemented yet'",
    "install-mcp": "node cli.js install",
    "configure": "node cli.js init",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:unit": "npm test",
    "test:mcp": "echo '{\"jsonrpc\": \"2.0\", \"id\": 1, \"method\": \"tools/list\"}' | node server-markdown.js",
    "test:api": "node tests/api-integration-test.js",
    "test:integration": "npm run test:api && npm run test:mcp && npm run test:websocket",
    "test:regression": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest tests/mcp-server-regression.test.js tests/react-import-regression.test.js tests/integration-full.test.js",
    "test:imports": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest tests/react-import-regression.test.js",
    "test:mcp-regression": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest tests/mcp-server-regression.test.js",
    "test:full-integration": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest tests/integration-full.test.js",
    "test:quick": "npm run test:imports && npm run test:mcp-regression",
    "test:ci": "npm run test:regression && npm run build && npm run test:mcp",
    "test:watch-regression": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --watch tests/mcp-server-regression.test.js tests/react-import-regression.test.js",
    "test:security": "npm audit --audit-level moderate",
    "autotest:setup": "bash scripts/core/setup-git-hooks.sh",
    "autotest:status": "ls -la .git/hooks/pre-commit .git/hooks/pre-push 2>/dev/null && echo '✅ Git hooks installed' || echo '❌ Git hooks not installed'",
    "test:continuous": "node scripts/testing/continuous-testing.js",
    "test:dev": "npm run test:continuous",
    "test:ui": "npm run test:ui-visual && npm run test:ui-connection",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:ui",
    "test:pre-push": "npm run test:all",
    "test:websocket": "node tests/websocket-reconnection-test.js",
    "test:ui-visual": "node tests/test-ui-visual.js",
    "test:ui-connection": "node tests/test-ui-api-connection.js",
    "test:debug": "node tests/debug-data-loading.js",
    "test:standalone": "node mcp-server-standalone.js",
    "verify:tools": "node scripts/core/verify-tools.js",
    "export:data": "echo 'Export script not implemented yet'",
    "import:data": "echo 'Import script not implemented yet'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
