{
  "name": "like-i-said-node-bridge",
  "displayName": "Like-I-Said Node Bridge",
  "description": "Node.js bridge for Python MCP server with enhanced stdio handling",
  "version": "1.0.0",
  "entrypoint": {
    "command": "node",
    "args": ["simple-node-bridge.js"]
  },
  "user_config": {
    "python_path": {
      "type": "string",
      "description": "Path to Python executable (optional, auto-detected)",
      "required": false,
      "default": ""
    },
    "debug_mode": {
      "type": "boolean", 
      "description": "Enable debug logging",
      "required": false,
      "default": false
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "simple-node-bridge.js",
    "node-python-bridge.js",
    "server/windows_robust_server.py",
    "package.json"
  ],
  "author": "endlessblink",
  "license": "MIT",
  "repository": "https://github.com/endlessblink/Like-I-Said-memory-mcp-server"
}